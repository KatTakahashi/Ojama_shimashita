<h2>Sign up</h2>

<%= form_with model: @member, url: member_registration_path, local: true do |f| %>
  <table>
    <tr>
      <th><%= f.label :名前 %></th>
      <th><%= f.label :（姓）%></th>
      <th><%= f.text_field :last_name, autofocus: true, placeholder: "桜木" %></th>
      <th><%= f.label :（名） %></th>
      <th><%= f.text_field :first_name, placeholder: "健二" %></th>
    </tr>
    <tr>
      <th><%= f.label :フリガナ %></th>
      <th><%= f.label :（セイ） %></th>
      <th><%= f.text_field :last_name_kana, placeholder: "サクラギ" %></th>
      <th><%= f.label :（メイ） %></th>
      <th><%= f.text_field :first_name_kana, placeholder: "ケンジ" %></th>
    </tr>
    <tr>
      <th><%= f.label :ユーザーネーム %></th>
      <th></th>
      <th><%= f.text_field :user_name, placeholder: "けんちゃん" %></th>
    </tr>
    <tr>
      <th><%= f.label :性別 %></th>
      <th></th>
      <th><%= f.select :gender, Member.genders_i18n.invert, {prompt: "選択してください"} %></th>
    </tr>
    <tr>
      <th><%= f.label :誕生日 %></th>
      <th></th>
      <th><%= f.date_select :birthday, start_year: (Time.now.year - 100), default: Date.new(1995, 1, 1) %></th>
    </tr>
    <tr>
      <th><%= f.label :居住地 %></th>
      <th></th>
      <th><%= f.select :living_prefecture, Member.living_prefectures_i18n.invert, {prompt: "選択してください"} %></th>
    </tr>
    <tr>
      <th><%= f.label :メールアドレス %></th>
      <th></th>
      <th><%= f.email_field :email, autocomplete: "email", placeholder: "sakuragi@kenji.co.jp" %></th>
    </tr>
    <tr>
      <th> <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %></th>
      <th></th>
      <th><%= f.password_field :password, autocomplete: "new-password" %></th>
    </tr>
    <tr>
      <th><%= f.label :パスワード（確認用） %></th>
      <th></th>
      <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
    </tr>
    <tr>
      <th><%= f.label :会員ステータス %></th>
      <th></th>
      <th><%= f.hidden_field :is_deleted %></th>
    </tr>
    <tr>
      <th></th>
      <th></th>
      <th><%= f.submit "新規登録", class: "btn btn-success btn-block" %></th>
    </tr>
  </table>
<% end %>


<%= render "public/shared/links" %>
