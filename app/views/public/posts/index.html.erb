posts_controller/index.html.erb

	<p>投稿の検索 "<%= @content %>"</p>
	  <%= form_tag(search_path, method: :get) do %>
      <%= text_field_tag 'content' %>
      <%= select_tag 'model', options_for_select({ "Post" => "post" }) %>
      <%= select_tag 'method', options_for_select({ "完全一致" => "perfect", "部分一致" => "partial" }) %>
      <%= submit_tag '検索' %>
    <% end %>

    <% @posts.each do |post| %>
      <tr>
        <% post.images.each do |image| %>
          <td><%= image_tag image, size: "150x150" %></td>
        <% end %>
        <td><%= post.category_i18n %></td>
        <td><%= post.prefecture_i18n %></td>
        <td><%= post.city %></td>
        <td><%= post.spot_name %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>


  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, value: @keyword %>
    <%= f.submit "検索" %>
  <% end %>


