posts_controller/show.html.erb<br>

<!-- 投稿画像を表示 -->
<% if @post.images.attached? %>
  <% @post.images.each do |image| %>
    <%= image_tag image, size: "150x150" %> <br>
  <% end %>
<% end %>

<%= @post.prefecture_i18n %><br>
<%= @post.city %><br>
<%= @post.spot_name %><br>
<%= @post.body %><br><br>

<%= link_to "編集する",edit_post_path(@post.id) %>

<%= link_to "削除する", post_path(@post.id), method: :delete %>

<p>コメント</p>
<p>コメント件数：<%= @post.post_comments.count %></p>
<% @post.post_comments.each do |post_comment| %>
  <%= post_comment.member.user_name %>
  <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.body %>
  <% if post_comment.member == current_member %>
  <div>
    <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
  </div>
  <% end %>
<% end %>
</div>
<div>
<%= form_with(model:[@post, @post_comment], local: true) do |f| %>
  <%= f.text_area :body, placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>
