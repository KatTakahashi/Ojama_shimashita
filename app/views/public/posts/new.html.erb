<%= form_with mode: @post, url: posts_path, local: true do |f| %>
  <table>
    <!-- エラー -->
    <!--<tr>-->
    <!--  <th><%#= f.label :投稿写真 %></th>-->
    <!--  <td><%#= f.attachment_field :post_image_image %></td>-->
    <!--</tr>-->
    <tr>
      <th><%= f.label :撮影日 %></th>
      <td><%= f.date_field :taken_at %></td>
    </tr>
    <tr>
      <th><%= f.label :都道府県 %></th>
      <td><%= f.select :prefecture, Post.prefectures_i18n.invert, {prompt: "選択してください"} %></td>
    </tr>
    <tr>
      <th><%= f.label :市町村 %></th>
      <td><%= f.text_field :city %></td>
    </tr>
    <tr>
      <th><%= f.label :スポット名 %></th>
      <td><%= f.text_field :spot_name %></td>
    </tr>
    <tr>
      <th><%= f.label :旅のメモ %></th>
      <td><%= f.text_area :body %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit "投稿", class: "btn btn-primary" %></td>
    </tr>
  </table>
<% end %>