<!-- =============== 全ユーザの投稿写真一覧ページ(都道府県別) =============== -->
<!-- --------------- ページタイトル -------------- -->
<div class="page_title">
  <i class="fas fa-camera fa-2x"></i>
  <b class="h3">　みんなが旅した日本</b>
</div>

<!-- --------------- 写真一覧(post/image) -------------- -->
<%#= render '/public/posts/pref_photos', posts: @posts %>


<% @posts.each do |post| %>
  <% post.images.each do |image| %>
    <%= image_tag image, class:"image_size" %>
  <% end %>
<% end %>|