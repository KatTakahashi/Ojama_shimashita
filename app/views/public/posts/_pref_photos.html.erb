<!-- =============== 部分テンプレート：都道府県別写真一覧 =============== -->
<!-- --------------- slick用リンク --------------- -->
  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
  <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

<!-- --------------- grid：47都道府県の画像 --------------- -->
<% posts.each.with_index(1) do | posts, index| %>
  <div class="pref_<%= index %>">
    <%= link_to I18n.t("enums.post.prefecture.#{Post.prefectures.keys[index-1]}"), index_pref_posts_path(prefecture_id: Post.prefectures.keys[index-1]), class:"pref_title" %>
    <% if posts.presence %>
      <div class="slider">
        <% posts.each do |post| %>
          <% post.images.each do |image| %>
            <%= image_tag image, class:"image_size" %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="slider">
        <%= image_tag "noimage.png", class:"image_size" %>
      </div>
    <% end %>
  </div>
<% end %>
